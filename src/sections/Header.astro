<style>
  .header-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 30px;
    z-index: 50;
    font-family: system-ui, -apple-system, sans-serif;
  }

  .header-container {
    position: fixed;
    top: 14px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 50;
  }

  .header-card {
    position: relative;
    width: 210px; 
    height: 40px;
    background-color: rgba(10, 10, 10, 0.45);
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    border-radius: 22px;
    overflow: hidden;
    color: white;
    transition: width 0.6s cubic-bezier(0.25, 1, 0.5, 1), 
                height 0.6s cubic-bezier(0.25, 1, 0.5, 1),
                background-color 0.4s ease;
  }

  .header-card:hover {
    width: 360px;
    height: 480px;
    background-color: rgba(10, 10, 10, 0.7);
  }

  .collapsed-content {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 16px;
    opacity: 1;
    transition: opacity 0.2s ease-out;
  }

  .header-card:hover .collapsed-content {
    opacity: 0;
    pointer-events: none;
    transition-duration: 0.1s;
  }

  .collapsed-inner {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo-icon-small {
    width: 24px;
    height: 20px;
  }
  
  .logo-text-small {
    font-size: 18px;
    font-weight: 500;
  }

  .expanded-content {
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s cubic-bezier(0.25, 1, 0.5, 1);
    width: 100%;
    height: 100%;
  }

  .header-card:hover .expanded-content {
    opacity: 1;
    pointer-events: auto;
    transition-delay: 0.15s;
  }

  .header-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 54px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 16px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    z-index: 20;
  }

  .logo-group {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .logo-icon {
    width: 24px;
    height: 24px;
  }

  .logo-text {
    font-size: 18px;
    font-weight: 500;
  }

  .current-time {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.5);
  }

  .menu-content {
    padding-top: 54px;
    padding: 68px 8px 8px 8px;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .nav-links {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .nav-item {
    display: block;
    width: 100%;
    text-align: left;
    padding: 8px;
    border-radius: 6px;
    color: rgba(255, 255, 255, 0.9);
    background: transparent;
    border: none;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.2s, color 0.2s;
  }

  .nav-item:hover {
    background-color: rgba(255, 255, 255, 0.05);
    color: white;
  }

  .nav-item-inner {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .nav-item-inner span {
    font-size: 14px;
    font-weight: 500;
  }

  .icon {
    width: 16px;
    height: 16px;
    stroke-width: 2px;
  }

  .divider {
    height: 1px;
    background-color: rgba(255, 255, 255, 0.1);
    margin: 8px 0;
  }

  .theme-section {
    padding: 0 0 8px 0;
  }

  .theme-label {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 8px;
    padding-left: 8px;
  }

  .theme-toggle {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 4px;
    background-color: rgba(255, 255, 255, 0.1);
    padding: 4px;
    border-radius: 8px;
  }

  .theme-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    padding: 6px;
    background: transparent;
    border: none;
    border-radius: 6px;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    font-size: 13px;
    font-weight: 500;
    transition: background-color 0.2s, color 0.2s;
  }

  .theme-btn span {
    font-size: 12px;
  }

  .theme-btn:hover {
    color: white;
  }

  .theme-btn.active {
    background-color: rgba(255, 255, 255, 0.3);
    color: white;
    box-shadow: 0 1px 2px rgba(0,0,0,0.1);
  }

  .icon-sm {
    width: 14px;
    height: 14px;
  }
</style>

<script>
  function updateTime() {
    const timeDisplay = document.querySelector('.current-time');
    if (timeDisplay) {
      const now = new Date();
      timeDisplay.textContent = now.toLocaleTimeString('en-US', {
        hour: 'numeric',
        minute: '2-digit',
        hour12: true
      });
    }
  }

  setInterval(updateTime, 1000);
  updateTime();
</script>